{
  "openapi": "3.0.3",
  "info": {
    "title": "Messaging API",
    "version": "1.0.0"
  },
  "servers": [{ "url": "http://localhost:3000" }],
  "paths": {
    "/api/login": {
      "post": {
        "operationId": "login",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": { "type": "string" },
                  "password": { "type": "string" }
                },
                "required": ["username", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ok": { "type": "boolean" },
                    "username": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/me": {
      "get": {
        "operationId": "getMe",
        "responses": {
          "200": {
            "description": "Authenticated user",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/User" }
              }
            }
          },
          "401": { "description": "Unauthorized" }
        }
      }
    },
    "/api/threads": {
      "get": {
        "operationId": "listThreads",
        "responses": {
          "200": {
            "description": "List of threads",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/ThreadSummary" }
                }
              }
            }
          }
        }
      },
      "post": {
        "operationId": "createThread",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": { "type": "string" }
                },
                "required": ["username"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Thread created or existing",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ThreadId" }
              }
            }
          }
        }
      }
    },
    "/api/threads/{threadId}/messages": {
      "get": {
        "operationId": "listMessages",
        "parameters": [
          {
            "in": "path",
            "name": "threadId",
            "required": true,
            "schema": { "type": "integer" }
          },
          {
            "in": "query",
            "name": "sinceId",
            "required": false,
            "schema": { "type": "integer" }
          },
          {
            "in": "query",
            "name": "limit",
            "required": false,
            "schema": { "type": "integer", "default": 100 }
          }
        ],
        "responses": {
          "200": {
            "description": "Messages in a thread",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "items": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/Message" }
                    },
                    "nextCursor": { "type": "integer", "nullable": true }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "operationId": "sendMessage",
        "parameters": [
          {
            "in": "path",
            "name": "threadId",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "content": { "type": "string", "minLength": 1 }
                },
                "required": ["content"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Message created",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Message" }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "username": { "type": "string" }
        },
        "required": ["id", "username"]
      },
      "ThreadId": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" }
        },
        "required": ["id"]
      },
      "ThreadSummary": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "createdAt": { "type": "string", "format": "date-time" },
          "participants": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/User" }
          },
          "lastMessage": {
            "type": "object",
            "nullable": true,
            "properties": {
              "id": { "type": "integer" },
              "content": { "type": "string" },
              "createdAt": { "type": "string", "format": "date-time" }
            }
          }
        },
        "required": ["id", "createdAt", "participants"]
      },
      "Message": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "threadId": { "type": "integer" },
          "createdAt": { "type": "string", "format": "date-time" },
          "content": { "type": "string" },
          "author": { "$ref": "#/components/schemas/User" }
        },
        "required": ["id", "threadId", "createdAt", "content", "author"]
      }
    }
  }
}
